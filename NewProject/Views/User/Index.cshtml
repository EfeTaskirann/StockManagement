@model IEnumerable<EntityLayer.Concrete.User>

@{
    ViewData["Title"] = "User List";
}

<h2>User List</h2>

<a asp-action="Add" class="btn btn-success">Add New User</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>User ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Username</th>
            <th>Email</th>
            <th>Is Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.User_id</td>
                <td>@user.F_name</td>
                <td>@user.L_name</td>
                <td>@user.Username</td>
                <td>@user.Mail</td>
                <td>@(user.Is_active ? "Active" : "Inactive")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.User_id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@user.User_id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
