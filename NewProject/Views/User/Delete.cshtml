    <h4>User Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.F_name)</dt>
        <dd>@Html.DisplayFor(model => model.F_name)</dd>

        <dt>@Html.DisplayNameFor(model => model.L_name)</dt>
